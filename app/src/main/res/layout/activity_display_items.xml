<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Add Product Details"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/name_value"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/title"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/name_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:id="@+id/product_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/quantity_value"
        android:layout_alignParentLeft="true"
        android:text="Quantity"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/quantity_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name_value"
        android:layout_below="@+id/name_value"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:inputType="text"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/price_value"
        android:layout_alignParentLeft="true"
        android:text="Price"
        android:textAppearance="?android:attr/textAppearanceMedium"/>

    <EditText
        android:id="@+id/price_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/quantity_value"
        android:layout_below="@+id/quantity_value"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="text"/>

    <Button
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add Product"
        android:textAppearance="?android:attr/textAppearanceMedium"/>
</RelativeLayout>
